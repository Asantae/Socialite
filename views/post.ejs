<%- include('partials/header') -%>
<%- include('partials/navigation') -%>
<script src="/js/main.js" defer></script>
<main class="index-main-content">
  <section class="recent-posts user-profile post-page-section">
    <div class="user-time-posted">
      <a href="/profile/<%= username %>">
        <span class="fs-300 post-username"><%= post.username %></span>
        <span class="fs-200"> - <%= timePosted[0] %></span>
      </a>
    </div>
    <div class="post-content">
      <span class="fs-300 post-caption"><%= post.caption %></span>
      <hidden><%= post._id %></hidden>
    </div>
    <div class="post-interactions">
      <button class="interaction-icons like-button" type="submit">
        <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-heart" viewBox="0 0 16 16">
          <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
        </svg><span class="like-button-span"><%= post.likes %></span>
      </button>
    </div>
    <form class="post-form comment-form" action="/comments/comment/<%= post._id %>" method="POST">
      <textarea class="bg-dark post-form-items comment-form-items" name="comment" type="text" placeholder="Write your reply"></textarea>
      <div class="index-button-div">
        <small class="error"></small><button class="form-button fs-300 comment-form-button" value="send" type="submit">Reply</button>
      </div>
    </form>
    <ul>

      <% if(comments.length === 0) { %>
      <li class="empty-comment">
        <span>This post has no comments.</span>        
      </li>

      <% } else { %>
        <% for(let i = 0; i < comments.length; i++) { %>
          <li class="card ">
            <div class="user-time-posted">
              <a href="/profile/<%= comments[i].creatorUsername%>">
                <span class="fs-300 post-username"><%= comments[i].creatorUsername %></span>
                <span class="fs-200"> - <%= timeCommented[i] %></span>
              </a>
            </div>
            <div class="post-content">
              <span class="fs-300 post-caption"><%= comments[i].comment %></span>
            </div>
          </li>
        <% } %>
      <% } %>
    </ul>
  </section>  
</main>



<%- include('partials/footer') -%>
